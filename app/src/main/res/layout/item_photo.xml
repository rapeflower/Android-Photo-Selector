<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_photo_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>

    <CheckBox
        android:id="@+id/cb_photo_selector"
        android:layout_width="@dimen/dimen_40px"
        android:layout_height="@dimen/dimen_40px"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dimen_6px"
        android:layout_marginRight="@dimen/dimen_6px"
        android:background="@drawable/btn_checkbox_selector"
        android:button="@null" />

</RelativeLayout>